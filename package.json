{
  "name": "apollo-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "local": "dotenv -e ./dotenv/.env -- nodemon 'src' --exec 'ts-node-dev' src -e ts,graphql",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src",
    "start": "ts-node src",
    "build": "tsc -p . && ncp src/schema dist/schema",
    "introspect": "npx prisma introspect",
    "generate": "npx prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "migrate:init": "rm -rf prisma/migrations && npx prisma migrate save --name “init” --experimental",
    "migrate:save": "dotenv -e ./dotenv/.env -- npx prisma migrate save --experimental",
    "migrate:up": "dotenv -e ./dotenv/.env -- npx prisma migrate up --experimental",
    "migrate:down": "dotenv -e ./dotenv/.env -- npx prisma migrate down 1 --experimental",
    "migrate:dev": "dotenv -e ./dotenv/dev.env -- npx prisma migrate up --experimental",
    "migrate:prod": "dotenv -e ./dotenv/prod.env -- npx prisma migrate up --experimental",
    "migrate:test": "dotenv -e ./dotenv/test.env -- npx prisma migrate up --experimental"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "@prisma/client": "^2.6.2",
    "apollo-server-express": "^2.17.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "eslint-plugin-graphql": "^4.0.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.26.1",
    "nexus-plugin-prisma": "^0.18.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.7",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-plugin-import": "^2.22.0",
    "graphql-import": "^1.0.2",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typegraphql-prisma": "^0.6.0",
    "typescript": "^4.0.2"
  }
}
