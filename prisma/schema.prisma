generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "node node_modules/typegraphql-prisma/generator.js"
  output   = "../src/generated/typegraphql-prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int          @default(autoincrement()) @id
  name         String?
  phone_number String       @unique
  password     String
  birth_date   DateTime?
  gender       User_gender?
  height       Int?
  weight       Int?
  is_glasses   Boolean?     @default(dbgenerated())
  is_tattoo    Boolean?     @default(dbgenerated())
  is_dyeing    Boolean?     @default(dbgenerated())
}

enum User_gender {
  MALE
  FEMALE
}
